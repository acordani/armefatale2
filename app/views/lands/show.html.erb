<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Vue ext√©rieure du <%= @land.full_street_address %></h4>
      </div>
      <div class="panel-body">

        <%= image_tag("http://maps.googleapis.com/maps/api/streetview?size=700x300&location=#{@land.latitude},#{@land.longitude}&fov=180&&pitch=10&sensor=false", class:"map_show")%>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Plan du <%= @land.full_street_address %></h4>
      </div>
      <div class="panel-body">

        <div id="map2" class="map_show"></div>

      </div>
    </div>
  </div>
</div>



<% content_for(:after_js) do %>
  <%= javascript_tag do %>
      $(document).on('ready', function() {

        handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map2' }
        }, function(){
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          handler.getMap().setZoom(15);
        });
      })
    <% end %>
  <% end %>